<div class="relative w-full">
  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
    <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>
  </div>
  <input 
    id="search-input"
    type="text" 
    placeholder="Buscar comandos..." 
    class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-base bg-gray-50 dark:bg-gray-700 focus:bg-white dark:focus:bg-gray-600 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 transition-colors touch-manipulation"
    autocomplete="off"
    autocorrect="off"
    autocapitalize="off"
    spellcheck="false"
  >
</div>

<script>
let searchTimeout: ReturnType<typeof setTimeout>;

function performSearch(query: string) {
  const searchTerm = query.toLowerCase().trim();
  
  // Detectar si estamos en la página de inicio o en una página de comando
  const isHomePage = window.location.pathname === '/';
  
  if (!isHomePage) {
    // Si no estamos en la página de inicio, redirigir con el término de búsqueda
    if (searchTerm) {
      window.location.href = `/?search=${encodeURIComponent(searchTerm)}`;
    } else {
      window.location.href = '/';
    }
    return;
  }
  
  // Si estamos en la página de inicio, realizar la búsqueda normal
  if (!(window as any).__CHEATSHEET_COMMANDS__) return;
  
  const commands = (window as any).__CHEATSHEET_COMMANDS__;
  
  if (searchTerm === '') {
    // Si no hay búsqueda, mostrar todos los comandos
    window.dispatchEvent(new CustomEvent('searchCleared'));
    return;
  }
  
  // Filtrar comandos que coincidan con el término de búsqueda
  const filteredCommands = commands.filter((command: any) => {
    const title = command.title?.toLowerCase() || '';
    const commandText = (command.syntax || command.command || '').toLowerCase();
    const description = command.description?.toLowerCase() || '';
    const tags = command.tags?.join(' ').toLowerCase() || '';
    
    return title.includes(searchTerm) || 
           commandText.includes(searchTerm) || 
           description.includes(searchTerm) || 
           tags.includes(searchTerm);
  });
  
  // Emitir evento con los resultados de búsqueda
  window.dispatchEvent(new CustomEvent('searchResults', { 
    detail: { 
      query: searchTerm,
      results: filteredCommands 
    } 
  }));
}

// Configurar el evento de búsqueda
document.addEventListener('DOMContentLoaded', () => {
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  
  if (searchInput) {
    // Manejar input (búsqueda mientras escribes)
    searchInput.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      const query = target.value;
      
      // Solo buscar en tiempo real si estamos en la página de inicio
      if (window.location.pathname === '/') {
        // Limpiar timeout anterior
        clearTimeout(searchTimeout);
        
        // Establecer nuevo timeout para búsqueda con debounce
        searchTimeout = setTimeout(() => {
          performSearch(query);
        }, 300);
      }
    });
    
    // Manejar Enter para buscar/redirigir
    searchInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        const query = searchInput.value;
        performSearch(query);
      }
    });
    
    // Limpiar búsqueda al hacer focus si está vacío
    searchInput.addEventListener('focus', () => {
      if (searchInput.value === '' && window.location.pathname === '/') {
        window.dispatchEvent(new CustomEvent('searchCleared'));
      }
    });
    
    // Si hay parámetro de búsqueda en la URL, aplicarlo
    const urlParams = new URLSearchParams(window.location.search);
    const searchParam = urlParams.get('search');
    if (searchParam && window.location.pathname === '/') {
      searchInput.value = searchParam;
      performSearch(searchParam);
    }
  }
});

// Función global para limpiar búsqueda
(window as any).clearSearch = () => {
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  if (searchInput) {
    searchInput.value = '';
    if (window.location.pathname === '/') {
      window.dispatchEvent(new CustomEvent('searchCleared'));
      // Limpiar el parámetro de búsqueda de la URL
      const url = new URL(window.location.href);
      url.searchParams.delete('search');
      window.history.pushState({}, '', url.pathname);
    } else {
      window.location.href = '/';
    }
  }
};
</script>
